{
  "name": "My Custom Codespace",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.9",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools"
      ]
    }
  },
  "workspaceFolder": "/workspace",
  "features": {
    "python": "latest"
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "runArgs": [
    "--cpus=16",
    "--memory=32g"
  ]
}
